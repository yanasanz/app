<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/editFieldsBarrier"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/card_post" />

    <ImageView
        android:id="@+id/edit_picture"
        android:layout_width="@dimen/posts_avatar_size"
        android:layout_height="@dimen/posts_avatar_size"
        android:background="@color/white"
        android:contentDescription="@string/edit_title"
        android:padding="@dimen/medium_padding"
        app:layout_constraintBottom_toTopOf="@id/editFieldsBarrier"
        app:layout_constraintEnd_toStartOf="@id/edit_title"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_round_edit_24" />

    <TextView
        android:id="@+id/edit_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/icon_button_min_size"
        android:background="@android:color/white"
        android:paddingTop="@dimen/small_padding"
        android:text="@string/edit_title"
        android:textColor="#0066ff"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/text_to_edit"
        app:layout_constraintEnd_toStartOf="@+id/cancel_button"
        app:layout_constraintStart_toEndOf="@id/edit_picture"
        app:layout_constraintTop_toTopOf="@id/edit_picture" />

    <TextView
        android:id="@+id/text_to_edit"
        android:layout_width="0dp"
        android:layout_height="@dimen/icon_button_min_size"
        android:background="@android:color/white"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        app:layout_constraintBottom_toTopOf="@id/editFieldsBarrier"
        app:layout_constraintEnd_toStartOf="@+id/cancel_button"
        app:layout_constraintStart_toEndOf="@id/edit_picture"
        app:layout_constraintTop_toBottomOf="@id/edit_title" />

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="@dimen/posts_avatar_size"
        android:layout_height="@dimen/posts_avatar_size"
        android:background="@color/white"
        android:contentDescription="@string/cancel_edit_content"
        android:padding="@dimen/medium_padding"
        app:layout_constraintBottom_toTopOf="@id/editFieldsBarrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit_title"
        app:srcCompat="@drawable/ic_round_clear_24" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:constraint_referenced_ids="edit_picture,edit_title,text_to_edit,cancel_button" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/editFieldsBarrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="top"
        app:constraint_referenced_ids="contentEditText, saveButton" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/contentEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/post_content_hint"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:padding="@dimen/common_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveButton"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/saveButton"
        android:layout_width="@dimen/posts_avatar_size"
        android:layout_height="@dimen/posts_avatar_size"
        android:background="@color/white"
        android:contentDescription="@string/save_post"
        android:padding="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />
</androidx.constraintlayout.widget.ConstraintLayout>

